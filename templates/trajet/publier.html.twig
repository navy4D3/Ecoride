{% set pageClass = 'publier-trajet' %}
{% extends 'base.html.twig' %}

{% block title %}EcoRide - Covoiturez l'esprit tranquille{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('datepicker') }}
    {{ encore_entry_script_tags('addTrajet') }}
    {{ encore_entry_script_tags('addVoiture') }}
    
    {% include 'google_autocomplete.html.twig' %}
    
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('style-datepicker') }}
{% endblock %}




{% block body %}

    <div id="trajet-details" class="flex-column gap-3" style="display: flex;">
        <h1>Ajouter un trajet</h1>

        {{ form_start(form, {attr: { class:'form-green-column', id:"add-trajet-form"}}) }}
            {{ form_row(form.lieuDepart) }}
            {{ form_row(form.lieuArrivee) }}
            
            <div class="row-inputs">
                <div class="datepicker-div">
                    {{ form_label(form.dateDepart)}}
                    {{ form_widget(form.dateDepart, attr: { max: ( "now"|date("Y-m-d")) }) }}
                    {% include 'home/datepicker.html.twig' %}
                </div>
                
                <div class="">
                    {{ form_widget(form.heureDepart) }}
                    <label for="">Heure</label>
                    <div class="hour-picker">
                        <select id="hours">
                            <option value="" disabled selected hidden>hh</option>
                        </select> :
                        <select id="minutes">
                            <option value="" disabled selected hidden>mm</option>
                        </select>
                    </div>
                </div>

                <div class="prix-container">
                    {{ form_label(form.prixPersonne) }}
                    {{ form_widget(form.prixPersonne) }}
                    <span id="credit-label"></span>
                </div>
                                
            </div>

            <div class="voitures-div">
                {{ form_widget(form.voiture) }}
                {{ form_label(form.voiture) }}
                {% include 'voiture/user_voiture_list.html.twig' %}
                {# <div id="user-voitures" class="user-voitures-list">
                    {% if app.user.voitures %} {% for voiture in app.user.voitures %}
                        <div class="voiture-card" id="{{ voiture.id }}">
                            
                            <span>{{ voiture.surnom }}</span>
                            <div>
                                <span>{{ voiture.marqueLabel }}</span>
                                <span>{{ voiture.modele }}</span>
                                {% if voiture.isElectric %}
                                    <span>Electrique</span> {% else %} <span>Thermique</span>
                                {% endif %}
                                <span class="fw-bold">{{ voiture.places }} place{{ voiture.places > 1 ? 's' : '' }}</span>
                            </div>
                            
                        </div>
                        
                    {% endfor %} {% endif %}
                    <div class="add-voiture-card" id="add-voiture-btn">
                        <span>Ajouter</span>
                        <twig:ux:icon name="simple-line-icons:plus" class="icon"/>
                    </div>
                </div> #}
            </div>
            
        
            <button id="continue-btn" class="btn-green-black submit-btn inactive">Continuer</button>
        
        
        {{ form_end(form) }}

        <div id='itineraires-choices' class=" flex-column gap-3" style="display:none";>
            <div id="itineraires-list">
            </div>
            <button id="validate-btn" form="add-trajet-form" type="submit" class="btn-green-black">Valider</button>
            <span class="" id="back-btn">Retour</span>
        </div>

        {# ajouter une section recapitulatif #}
    </div>

    

    {# <div id="add-voiture-div" style="display:none">
    </div> #}


{% endblock %}
