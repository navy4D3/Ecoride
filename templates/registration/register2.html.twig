{% set pageClass = 'register-step-two' %}
{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('register2') }}
    {# {{ encore_entry_script_tags('registerLogin') }} #}
    {% include 'google_autocomplete.html.twig' %}
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <a href="/" class="logo-top-left">      
            <svg  width="311" height="223" viewBox="0 0 311 223" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 4.08852C0 1.83049 1.83049 0 4.08852 0H207.969C231.679 0 250.899 19.2202 250.899 42.9295C250.899 66.6387 231.679 85.8589 207.969 85.8589H81.7705C36.6099 85.8589 0 49.2491 0 4.08852Z" fill="#386150"/>
                <path d="M311 217.873C311 220.306 309.027 222.279 306.593 222.279H107.324C81.7702 222.279 61.0552 201.564 61.0552 176.011C61.0552 150.457 81.7703 129.742 107.324 129.742H222.87C271.543 129.742 311 169.2 311 217.873Z" fill="#386150"/>
            </svg>
            <span >EcoRide</span>
    </a>

    {{ form_start(registrationStepTwoForm, {'attr': {'class':'form-green-column'}}) }}
        <div class="profil-picture-div">
            {{ form_widget(registrationStepTwoForm.photo_profil) }}
            <div id="profile-picture-btn">
                <twig:ux:icon name="simple-line-icons:plus" id="plus-icon" class="plus-icon"/>
            </div>
            {{ form_label(registrationStepTwoForm.photo_profil)}}
        </div>
        
        {{ form_row(registrationStepTwoForm.nom) }}
        {{ form_row(registrationStepTwoForm.prenom) }}
        {{ form_row(registrationStepTwoForm.date_naissance) }}
        {{ form_row(registrationStepTwoForm.adresse) }}
        {{ form_row(registrationStepTwoForm.telephone) }}
        

        <button type="submit" class="btn-green" id="submit-btn">Finaliser</button>
        {# {{ form_errors(registrationStepTwoForm) }} #}
    {{ form_end(registrationStepTwoForm) }}

    {% if errors %}
        <div class="errors-container d-flex flex-column gap-1">
            {% for error in errors %}
                <div class="alert alert-danger">
                    {{ error.message }}
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
